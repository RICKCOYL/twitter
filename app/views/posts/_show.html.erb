<h4>Football Posts</h4>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
      <td><strong><%= @user.username.upcase%></strong></td><br>

        <td><%= post.body %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

